{
  "name": "@britepulse/sdk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/britepulse.umd.js",
  "module": "./dist/britepulse.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/britepulse.es.js",
      "require": "./dist/britepulse.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "preact": "^10.20.0"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.8"
  }
}
