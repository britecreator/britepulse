# Google Cloud
GCP_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Firestore
FIRESTORE_DATABASE_ID=(default)

# BigQuery (optional, for analytics)
BIGQUERY_DATASET=britepulse

# OAuth (Google Workspace)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
OAUTH_REDIRECT_URI=http://localhost:3001/auth/google/callback
ALLOWED_DOMAIN=brite.co

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=britepulse@brite.co
SENDGRID_FROM_NAME=BritePulse

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=your-anthropic-api-key

# API Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Console Configuration (Vite dev server)
VITE_API_URL=http://localhost:3001/api

# Session
SESSION_SECRET=change-this-to-a-secure-random-string-min-32-chars

# Logging
LOG_LEVEL=debug
